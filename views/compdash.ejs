<!DOCTYPE html>
<html>
    <head>
        <title>HireHub</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css"/>
        <script src="https://kit.fontawesome.com/ac4c7d0dfa.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="./dashboard.css">
  
    </head>
    <body>
        <div class="sidebar">
            <div class="logo">
                <!-- <img src="logo.png"> -->
            </div>
            <ul class="menu">
                <li class="active">
                        <a href="/compdash"><i class="fa-solid fa-border-all"></i><span>All Jobs</span></a>
                </li>
                <li>
                    <a href="/compro"><i class="fa-regular fa-user"></i><span>Profile</span></a>
                </li>
           
                <li>
                    <a href="/newpost"><i class="fa-solid fa-plus"></i><span>Post Job</span></a>
                </li>
                  <li>
                    <a href="/applications"><i class="fa-solid fa-users"></i><span>Applicants</span></a>
                </li>
           
          
                <!--<li>-->
                <!--    <a href="/settings"><i class="fa fa-cog"></i><span>Settings</span></a>-->
                <!--</li>-->
                <li class="logout">
                    <a href="/logout"><i class="fa fa-sign-out"></i><span>Logout</span></a>
                </li>
            </ul>
        </div>
        <div class="main--content">
            <div class="header--wrapper">
                <div class="header--title">
                    <h3>HireHub</h3>
                    <span>Find the right job for you</span>
                </div>
               
            </div>


   
               <%contents.forEach ((content, index)=>{ %>
                <div class="tabular--wrapper col-lg-9 col-sm-12 movie-card  mx-3">
                    <h3 class="main--title"><a href="/comprofile/<%= content.compName%>"><%= content.compName%></a></h3>
                    <h6><%= content.postDate%></h6>
                    <div class="table-container">
                             <div class="row justify-content-center">
                     
                     
                          <div class="col-lg-11 col-sm-6 movie-card ">
                          <div class=" card service py-3 border-0 ">
                           <div class="shadow px-5 py-3">
                            <p><u>Job Title:</u> <%= content.jobTitle%></p>
                            <p ><%= content.descriptionn%></p>
                            <p>Category: <%= content.category%></p>
                            <p>Deadline: <%= content.deadLine%></p>
                            </div>
                            <a class="mt-3" href="/details/<%= content.id%>" class="custom-link">
                                  <span ><u>Show details</u></span>
                            </a>
                          </div>
                        </div>
                    
                      
                      
                        <!-- Add more movie cards as needed -->
                    </div>
                    </div>
                </div>

     
                  <% });
                  %> 
           


     


    </div>
    </body>
</html>